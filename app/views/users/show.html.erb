<div class="index-container">
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-8">
			<table class="table">
				<thead>
					<tr>
						<th>Image</th>
						<th>Title</th>
						<th>Text</th>
						<th>Genre</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
					<tr>
						<td>
							<%= link_to post_path(post.id) do %>
								<%= attachment_image_tag post, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
							<% end %>
								<%= post.user.name %>
						</td>
						<td><%= post.title %></td>
						<td><%= post.text %></td>
						<td><%= post.genre.name %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-2">
    		<%= render 'users/profile', user: @user %>
		</div>
	</div>
</div>
