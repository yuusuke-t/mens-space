<div class="index-container">
	<div class="row">
		<div class="col-xs-4"></div>
		<div class="col-xs-4">
		<%= form_with(model: @post, local: true) do |f| %>
			<h4>Image</h4>
			<%= f.attachment_field :image %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "form-control" %>
			<h4>Text</h4>
			<%= f.text_area :text, class: "form-control" %>
			<h4>Genre</h4>
	    <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
			<%= f.submit "変更を保存", class: "btn btn-info btn-lg btn-block admin-products-create" %>
		<% end %>
		</div>
	</div>
</div>