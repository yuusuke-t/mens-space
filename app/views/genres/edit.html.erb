<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <h3 class="genres-title">ジャンル編集画面</h3>

    <%= form_with model: @genre do |f| %>
      <div class="col-xs-3">
        <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %>
      </div>
      <label><%= f.radio_button :is_active, :enable %> 有効 </label>
      <label class="genres-disable"><%= f.radio_button :is_active, :disable %> 無効 </label>
      <%= f.submit "変更を保存する", class: "btn btn-info genres-submitbutton" %>
    <% end %>
  </div>
  <div class="col-xs-1"></div>
</div>